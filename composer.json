{
    "name": "encontreumlivro/site",
    "description": "Sistema Encontre Um Livro",
    "type": "application",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "livros",
        "doação"
    ],
    "homepage": "https://encontreumlivro.tk",
    "config": {
        "sort-packages": true,
        "process-timeout": 3600
    },
    "require": {
        "php": "^7.4 || 8.0",
        "composer/package-versions-deprecated": "^1.10.99",
        "laminas/laminas-component-installer": "^2.1.2",
        "laminas/laminas-config-aggregator": "^1.2",
        "laminas/laminas-diactoros": "^2.3.0",
        "laminas/laminas-stdlib": "^3.2.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio": "^3.2.1",
        "mezzio/mezzio-helpers": "^5.3",
        "laminas/laminas-servicemanager": "^3.4",
        "mezzio/mezzio-fastroute": "^3.0.3",
        "mezzio/mezzio-laminasviewrenderer": "^2.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "filp/whoops": "^2.7.1",
        "laminas/laminas-development-mode": "^3.2",
        "mezzio/mezzio-tooling": "^1.3",
        "phpspec/prophecy": "^1.10.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^0.12.85",
        "phpunit/phpunit": "^9.3.7",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.7",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "mezzio": "mezzio --ansi",
        "check": [
            "@cs-check",
            "@phpstan",
            "@psalm",
            "@test"
        ],
        "check-coverage": [
            "@cs-check",
            "@phpstan",
            "@test-coverage"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8084 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "phpstan": "phpstan clear-result-cache && phpstan analyse --memory-limit=-1 --level=max",
        "psalm": "psalm --show-info=true"
    }
}
